html
	head
		title Baasket
		link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet', href='./css/main.css')

	body(ng-app='baasket', ng-controller='controller')
		header
			include include/nav.jade

			//.section.container: ul.tabs
				li.tab.col.s3: a(href='#') Database
				li.tab.col.s3: a(href='#') Backend
				li.tab.col.s3: a(href='#') Notifications
				li.tab.col.s3: a(href='#') Services

		main(style='position:relative')
			.loading(ng-show='!loaded')

			.container(ng-show='loaded', ng-cloak)
				include products.jade

			include filter.jade
			include calculate.jade
			include compare.jade
			include detail.jade

		include include/footer.jade

		script(src='https://code.jquery.com/jquery-2.2.4.min.js')

		//script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js')
		script(src='./js/global.js')
		script(src='./js/jquery.easing.1.3.js')
		script(src='./js/dropdown.js')
		script(src='./js/forms.js')
		script(src='./js/velocity.min.js')
		script(src='./js/leanModal.js')
		script(src='./js/hammer.min.js')
		script(src='./js/jquery.hammer.js')
		script(src='./js/sideNav.js')
		script(src='./js/tabs.js')
		script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js')
		script(src='https://cdn.firebase.com/js/client/2.4.2/firebase.js')
		script(src='./js/checklist-model.js')
		script(src='./js/app.js')

		script.
			$('.button-collapse').sideNav()
			//$(document).ready(function(){
				$('.modal-trigger').leanModal();
				
			//});
			$(document).on('click', 'nav a', function(){
				$('.button-collapse').sideNav('hide');
			})